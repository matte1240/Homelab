# Esempio di configurazione secrets per Homelab Stack
# Copia questo file come 'secrets.yml' e inserisci i tuoi valori reali

# Cloudflare credentials per Let's Encrypt
cloudflare_email: "your_email@domain.com"
cloudflare_dns_api_token: "your_cloudflare_dns_api_token_here"

# Pi-hole credentials
pihole_webpassword: "your_secure_pihole_password"

# Infrastructure
proxmox_host: "192.168.178.70"  # IP del server Proxmox

# Altri secrets che potresti aggiungere in futuro
# mysql_root_password: "your_secure_password"
# admin_email: "your_email@domain.com"

# Per ottenere il token Cloudflare DNS API:
# 1. Vai su https://dash.cloudflare.com/profile/api-tokens
# 2. Crea Token -> Custom Token
# 3. Permessi: Zone:Read, DNS:Edit
# 4. Zone Resources: Include -> All zones (o specifico per il tuo dominio)
